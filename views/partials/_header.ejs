<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <%if (username) { %>
          <div >
            <label >Loggin in as<h5><%= username %></h5></label>
            <form class="form-inline"  method="POST" action="/logout">
            <button type="submit" class="btn btn-outline-dark">Logout</button>
            </form>
          </div>
        <% }else { %>
          <form class="form-inline" action="/login" method="POST">
          <div class="form-group">
            <label for="longURL">Enter Username:</label>
            <input
              class="form-control"
              type="text"
              name="username"
              placeholder="username"
              style="width: 300px; margin: 1em"
            />
              <button type="submit" class="btn btn-outline-dark">Login</button>
          </div>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>